<div class="login">
  <%= form_tag login_path do %>
    <p>
      <%= label_tag :email, ""%>
      <%= email_field_tag :email, "", :required => true, :placeholder => "Email" %>
    </p>
    <p>
      <%= label_tag :password, "" %>
      <%= password_field_tag :password, "", :required => true , :placeholder => "Password" %>
    </p>

    <p><%= submit_tag "Login", :class => "btn btn-primary btn-block btn-lg"%></p>
  <% end %>
</div>
