
<% @doctors.each do |doctor| %>
<div class="row-fluid">
  <div class="col-md-4"><br>
<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title"><%= "Dr. #{doctor.firstname} #{doctor.lastname}" %></h3>
  </div>
  <div class="panel-body">
    <div class="row">
      <div class="col-md-4">
        <%= cl_image_tag( doctor.image, :width => 100, :height => 150, :crop => :fill)%>
      </div>
      <div class="col-md-8 list-group">
        <li class="list-group-item">Qualifications: <%= doctor.doctor_qualifications%> </li>
        <li class="list-group-item">Speciality: <%= doctor.doctor_speciality%> </li>
        <li class="list-group-item">Awards/Recognitions: <%= doctor.doctor_awards_recognitions%> </li>
        <li class="list-group-item">Professional Experience: <%= doctor.doctor_professional_experience%> </li>
        <li class="list-group-item">Publications: <%= doctor.doctor_publications%> </li>
        <li class="list-group-item">Memberships: <%= doctor.doctor_memberships%> </li>
      </div>
    </div>
  </div>
  <div class="text-center">

    <div class="doctor-actions list-group" role="group" aria-label="...">
      <%if is_admin?%>
        <td>
          <%= link_to edit_user_path(doctor), class: 'btn btn-default btn-sm' do %>
            <span class="glyphicon glyphicon-pencil"></span> Edit
          <% end %>
        </td>
        <td>
          <%= link_to user_path(doctor), method: :delete, class: 'btn btn-default btn-sm', data: {confirm: "Are you sure?"} do %>
            <span class="glyphicon glyphicon-trash"></span> Delete
          <% end %>
        </td>
      <% end %>
      <td>
        <%= link_to user_path(doctor), class: 'btn btn-default btn-sm' do %>
          <span class="glyphicon glyphicon-envelope"></span> Connect
        <% end %>
      </td>
    </div>
  </div>

  </div>
</div>

</div>
</div>
<% end %>
