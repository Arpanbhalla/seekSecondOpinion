
<h1>All Available specilists</h1>

<% @doctor.each do |doctor| %>
<%= image_tag( doctor.image ) %>
  <ul>
    <li><strong>Doctors Name :</strong> Dr. <%= doctor.firstname %><%= doctor.lastname %></li>
    <li><strong>Doctors Qualifications :</strong><%= doctor.qualifications %></li>
    <li><strong>Doctors Specility :</strong><%= doctor.speciality %></li>
    <li><strong>Doctors Experience :</strong><%= doctor.expertise %></li>
    <li><strong>Awards :</strong><%= doctor.awards_recognitions %></li>
    <li><strong>Memberships :</strong><%= doctor.memberships %></li>
    <li><strong>Publications :</strong><%= doctor.publications %></li>
    <% if is_admin? %>
        <li><%= link_to "Edit", edit_doctor_path(doctor)%></li>
        <li><%= link_to "Delete", doctor_path(doctor),method: :delete%></li>
    <% end %>
  <button><%=link_to "Contact Doctor", doctor_path(doctor)  %></button>
    <hr>
</ul>
<% end %>
